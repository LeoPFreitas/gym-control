{% extends "layout.njk" %}

{% block content %}

    <form class="card" method="POST" action="/instructors">
        <section class="avatar" style="background: url(https://source.unsplash.com/collection/8353395/500x800) no-repeat top center / cover"></section>

        <section class="details">
            <h3>Novo Instrutor</h3>

            <div class="item">
                <div class="">Avatar URL</div>
                <div class="">
                    <input type="url" name="avatar_url" id="" placeholder="http://">
                </div>
            </div>

            <div class="item">
                <div class="">Avatar URL</div>
                <div class="">
                    <input type="text" name="name" id="" placeholder="Nome do instrutor">
                </div>
            </div>

            <div class="item">
                <div class="">Data de Nascimento</div>
                <div class="">
                    <input type="date" name="birth" id="">
                </div>
            </div>

            <div class="item">
                <div class="">Sexo</div>
                <div class="">
                    <span><input type="radio" name="gender" value="M" checked>Masculino</span>
                    <span><input type="radio" name="gender" value="M">Feminino</span>
                </div>
            </div>

            <div class="item">
                <div class="">Área de Atuação</div>
                <div class="">
                    <input type="text" name="services" placeholder="Separe os serviços prestados com virgula">
                </div>
            </div>

            <button type="submit">Salvar</button>

        </section>
    </form>

{% endblock content %}