{% extends "layout.njk" %}

{% block content %}

    <div class="card">
        <section class="avatar" style="background: url({{ instructor.avatar_url }}) no-repeat top center / cover"></section>

        <section class="details">
            <h3>Detalhes</h3>

            <div class="item">
                <div class="">Nome instrutor</div>
                <div class="">{{ instructor.name }}</div>
            </div>

            <div class="item">
                <div class="">Idade</div>
                <div class="">{{ instructor.age }}</div>
            </div>

            <div class="item">
                <div class="">Sexo</div>
                <div class="">{{ "Masculino" if instructor.gender == "M" else "Feminino" }}</div>
            </div>

            <div class="item">
                <div class="">Acompanhamento</div>
                <div class="">
                    {% for service in instructor.services %}
                        <span>{{ service }}</span>
                    {% endfor %}
                </div>
            </div>

            <div class="item">
                <div class="">Desde</div>
                <div class="">{{ instructor.created_at }}</div>
            </div>

            <a href="/instructors/{{ instructor.id }}/edit" class="button">Editar</a>

        </section>
    </div>

{% endblock content %}