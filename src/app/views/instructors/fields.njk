<div class="item">
    <div class="">Avatar URL</div>
    <div class="">
        <input type="url" name="avatar_url" placeholder="http://" value="{{instructor.avatar_url}}">
    </div>
</div>

<div class="item">
    <div class="">Nome</div>
    <div class="">
        <input type="text" name="name" placeholder="Nome do instrutor" value="{{instructor.name}}">
    </div>
</div>

<div class="item">
    <div class="">Data de Nascimento</div>
    <div class="">
        <input type="date" name="birth" value="{{instructor.birth}}">
    </div>
</div>

<div class="item">
    <div class="">Sexo</div>
    <div class="">
        <span><input type="radio" name="gender" value="M" 
        {% if instructor.gender =='M' %}
        checked
        {% endif %}>Masculino</span>
        <span><input type="radio" name="gender" value="F"
        {% if instructor.gender =='F' %}
        checked
        {% endif %}>Feminino</span>
    </div>
</div>

<div class="item">
    <div class="">Área de Atuação</div>
    <div class="">
        <input type="text" name="services"
        value="{{instructor.services}}"
        placeholder="Separe os serviços prestados com virgula">
        
    </div>
</div>

<button type="submit">Salvar</button>